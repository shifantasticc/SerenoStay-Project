<style>
  .search-bar {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    margin-left: 1rem;
  }

  .search-input {
    border-radius: 3rem;
    width: 30rem;
  }

  .search-btn {
    background-color: #fe424d;
    color: #fff;
    border-radius: 3rem;
    padding: 0.4rem 1rem;
    display: flex;
    align-items: center;
  }

  .search-btn:hover {
    border: 2px solid rgb(221, 86, 86);
    background-color: #fe424d;
    color: #fff;
  }

  .search-btn i {
    margin-right: 0.5rem;
  }

  @media (min-width: 768px) and (max-width: 1100px) {
    .search-input {
      width: 20rem;
    }
  }

  @media (max-width: 768px) {
    .search-input {
      width: 15rem;
    }

    .search-label {
      display: none;
    }

    .search-btn i {
      margin-right: 0rem;
    }

    .search-btn {
      padding: 0.5rem 0.8rem;
    }

    .search-bar {
      margin-left: 0rem;
    }
  }

  @media (max-width: 510px) {
    .explore-link {
      display: none;
    }
    .search-input {
      width: 10rem;
    }
    .search-btn {
      font-size: 1rem;
    }
  }

  @media (max-width: 350px) {
    .search-input {
      width: 7rem;
    }
  }
</style>

<nav class="navbar navbar-expand-lg bg-body-light border-bottom sticky-top">
  <div
    class="container-fluid d-flex align-items-center justify-content-between flex-wrap"
  >
    <div class="d-flex align-items-center gap-2">
      <a class="navbar-brand me-2" href="/listings">
        <i class="fa-solid fa-meteor"></i>
      </a>
      <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
        <div class="navbar-nav text-end">
          <a class="nav-link explore-link" href="/listings">Explore</a>
        </div>
      </div>
    </div>

    <!-- Search Bar -->
    <form action="/search" method="GET" class="d-flex search-bar" role="search">
      <input
        class="form-control me-2 search-input"
        type="search"
        name="search"
        placeholder="Search"
      />
      <button class="btn search-btn" type="submit">
        <i class="fa-solid fa-magnifying-glass"></i>
        <span class="search-label">Search</span>
      </button>
    </form>

    <!-- Toggle Button -->
    <button
      class="navbar-toggler"
      type="button"
      data-bs-toggle="collapse"
      data-bs-target="#navbarNavAltMarkup"
    >
      <span class="navbar-toggler-icon"></span>
    </button>

    <!-- Collapsible Right Nav -->
    <div
      class="collapse navbar-collapse justify-content-end"
      id="navbarNavAltMarkup"
    >
      <div class="navbar-nav text-end">
        <a class="nav-link" href="/listings/new">Add new Listing</a>
        <% if (!currUser) { %>
        <a class="nav-link" href="/signup"><b>Sign up</b></a>
        <a class="nav-link" href="/login"><b>Log in</b></a>
        <% } %> <% if (currUser) { %>
        <a class="nav-link" href="/logout"><b>Log out</b></a>
        <% } %>
      </div>
    </div>
  </div>
</nav>
